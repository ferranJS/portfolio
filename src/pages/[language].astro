---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Projects from "../components/Projects.astro"
import { getLangFromUrl, useTranslations } from "../i18n/utils"
import { languages } from "../i18n/languages"

const baseURL = import.meta.env.BASE_URL

export function getStaticPaths() {
  const paths = []
  for (const language of Object.keys(languages)) {
    paths.push({ params: { language } })
  }
  return paths
}

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout title="FerranJS Web" description={t("metaDescription")}>
  <main>
    <Header />
    <section class="flex h-screen animate-[bg-color-shift_15s_infinite] items-center">
      <div
        class="px-7 pr-10 text-[1.2rem] font-thin sm:px-24 xl:px-48 [&>p]:mb-1 [&>p]:max-w-2xl [&>p]:text-gray-950"
      >
        <h1 class="mb-2 font-heming text-7xl font-bold">Ferran Ramírez</h1>
        <h2 class="mb-6 font-heming text-5xl font-medium leading-[1.15]">
          <span class="u !decoration-[3px] !underline-offset-[5px]">
            <!-- animate-[underline-color-shift_15s_infinite] -->
            full stack</span
          >
          developer
        </h2>
        <p>
          {
            lang == "es" ? (
              <>
                <span class="u !decoration-[1.3px]">Ingeniero</span> de Software con 2 años de experiencia como
                desarrollador
                <span class="u !decoration-[1.3px]">Full Stack</span>, experimentado en
              </>
            ) : lang == "de" ? (
              <>
                Software <span class="u !decoration-[1.3px]">Ingenieur</span> mit 2 Jahren Erfahrung als
                <span class="u !decoration-[1.3px]">Full Stack</span> Entwickler, erfahren in
              </>
            ) : lang == "fr" ? (
              <>
                <span class="u !decoration-[1.3px]">Ingénieur</span> logiciel avec 2 ans d'expérience en tant
                que
                <span class="u !decoration-[1.3px]">Full Stack</span> développeur, expérimenté en
              </>
            ) : lang == "it" ? (
              <>
                <span class="u !decoration-[1.3px]">Ingegnere</span> software con 2 anni di esperienza come
                <span class="u !decoration-[1.3px]">Full Stack</span> developer, esperto in
              </>
            ) : (
              <>
                Software <span class="u !decoration-[1.3px]">Engineer</span> with 2 years of experience as a
                <span class="u !decoration-[1.3px]">Full Stack</span> developer, experienced in
              </>
            )
          }
          <span class="u !decoration-red-600">Angular</span>,
          <span class="u !decoration-orange-400">Astro</span>,
          <span class="u !decoration-sky-400">React</span>, Firebase, Ionic, Capacitor {t("and")} Tailwind.
        </p>
        <p>
          {t("phrase1")}
          <!-- {t("phrase2")} -->
        </p>
        <p>
          {t("phrase3")}
        </p>
      </div>
    </section>
  </main>
  <Projects />
  <Footer />
</Layout>

<style is:global>
  html {
    /* scroll-snap-type: y mandatory;
    scroll-snap-stop: always;
    scroll-behavior: smooth; */
  }
  span.u {
    @apply underline decoration-indigo-400 decoration-wavy decoration-[1.1px] underline-offset-[2px];
  }
  @keyframes bg-color-shift {
    0%,
    100% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(0, 208, 255, 0.39);
    }
    17% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(255, 0, 76, 0.23);
    }
    34% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(0, 72, 255, 0.28);
    }
    51% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(121, 135, 255, 0.42);
    }
    68% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(64, 0, 255, 0.27);
    }
    85% {
      background: linear-gradient(147deg, white 44%, transparent), rgba(255, 63, 46, 0.24);
    }
  }
  @keyframes bg-color-shift-flipped {
    0%,
    100% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(0, 208, 255, 0.39);
    }
    17% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(255, 0, 76, 0.23);
    }
    34% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(0, 72, 255, 0.28);
    }
    51% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(121, 135, 255, 0.42);
    }
    68% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(64, 0, 255, 0.27);
    }
    85% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(255, 63, 46, 0.24);
    }
  }
</style>

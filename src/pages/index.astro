</Layout>
<style is:global>
  html {
    scroll-snap-type: y mandatory;
    scroll-snap-stop: always;
    scroll-behavior: smooth;
  }
  @keyframes bg-color-shift {
    0%,
    100% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(0, 208, 255, 0.29);
    }
    17% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(255, 0, 76, 0.23);
    }
    34% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(0, 72, 255, 0.18);
    }
    51% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(255, 242, 0, 0.23);
    }
    68% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(64, 0, 255, 0.27);
    }
    85% {
      background: linear-gradient(150deg, white 44%, transparent), rgba(0, 222, 52, 0.24);
    }
  }
  @keyframes bg-color-shift-flipped {
    0%,
    100% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(0, 208, 255, 0.29);
    }
    17% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(255, 0, 76, 0.23);
    }
    34% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(0, 72, 255, 0.18);
    }
    51% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(255, 242, 0, 0.23);
    }
    68% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(64, 0, 255, 0.27);
    }
    85% {
      background: linear-gradient(30deg, white 44%, transparent), rgba(0, 222, 52, 0.24);
    }
  }
</style>

---
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-gray-700">
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: Heming Variable;
    src: url("/heming.woff2") format("woff2");
    font-weight: 100;
    font-style: normal;
  }
  body {
    font-family: "Heming Variable", ui-monospace, monospace;
  }

  /* anchor underlines */
  .underlined::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1.5px;
    opacity: 0;
    transition: 0.4s;
    opacity: 1;
    transform: translate3d(-100%, 0, 0);
  }
  .underlined:hover::after {
    transform: translate3d(0, 0, 0);
  }
</style>
